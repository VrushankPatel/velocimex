server:
  host: "localhost"
  port: 8080
  uiPort: 3000
  shutdownTimeout: 10s
  readTimeout: 5s
  writeTimeout: 5s
  enableCORS: true
  allowedOrigins:
    - "http://localhost:3000"
    - "http://localhost:8080"

feeds:
  - name: "binance"
    type: "websocket"
    url: "wss://stream.binance.com:9443"
    subscriptions:
      - "btcusdt@depth"
      - "ethusdt@depth"
    symbols:
      - "BTCUSDT"
      - "ETHUSDT"
    apiKey: ""
    apiSecret: ""
  - name: "coinbase"
    type: "websocket"
    url: "wss://ws-feed.pro.coinbase.com"
    subscriptions:
      - "level2"
    symbols:
      - "BTC-USD"
      - "ETH-USD"
    apiKey: ""
    apiSecret: ""
  - name: "kraken"
    type: "websocket"
    url: "wss://ws.kraken.com"
    subscriptions:
      - "book"
    symbols:
      - "XBT/USD"
      - "ETH/USD"
    apiKey: ""
    apiSecret: ""

strategies:
  arbitrage:
    name: "Cross-Exchange Arbitrage"
    symbols:
      - "BTC/USD"
      - "ETH/USD"
    exchanges:
      - "binance"
      - "coinbase"
      - "kraken"
    updateInterval: 5s
    minimumSpread: 0.1
    maxSlippage: 0.05
    minProfitThreshold: 0.2
    maxExecutionLatency: 100
    simultaneousExchanges: 2
    exchangeFees:
      binance: 0.001
      coinbase: 0.005
      kraken: 0.0026
    riskLimit: 1000.0

simulation:
  paperTrading:
    enabled: true
    initialBalance:
      USD: 100000.0
      BTC: 10.0
      ETH: 100.0
    latencySimulation: true
    baseLatency: 20
    randomLatency: 10
    slippageModel: "fixed"
    fixedSlippage: 0.02
    exchangeFees:
      binance: 0.001
      coinbase: 0.005
      kraken: 0.0026
